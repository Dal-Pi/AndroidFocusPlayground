<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="view_base">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button_number" parent="@style/view_base">
        <item name="android:background">@drawable/selector_button_number</item>
        <item name="android:textSize">40sp</item>
        <item name="android:elevation">@dimen/button_elevation</item>
    </style>

    <style name="text_desc" parent="@style/view_base">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_focus_desc">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:text">FocusArea</item>
    </style>

    <style name="layout_row">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="layout_row_inner">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="layout_row_inner_focus_area" parent="@style/layout_row_inner">
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@drawable/bg_transparent_with_border</item>
    </style>

</resources>